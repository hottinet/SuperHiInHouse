<div id="header-global">

	<div class="header-left">
		<a href="/">
			{% assign shop_title = 'general.shop.title' | t %}
			{% include 'inline-icon' with svg: 'logo.svg', alt: shop_title, class: 'logo-main' %}
		</a>

		{% include 'nav-list', handle: 'main-menu', class: 'header-nav-list' %}
	</div>

	<div class="header-right">
		<a href="/search">
			Search
			{% include 'inline-icon' with svg: 'search.svg', alt: 'search', class: 'search' %}
		</a>

		{% include 'currency-picker' %}

		<a class="js-cart-link" href="/cart">{{ 'cart.button.count_html' | t: itemCount: cart.item_count }}</a>
	</div>

</div>